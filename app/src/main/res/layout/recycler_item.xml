<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <android.support.constraint.ConstraintLayout
        android:background="@color/male_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/worker_photo"
            android:layout_width="@dimen/list_item_image_size"
            android:layout_height="@dimen/list_item_image_size"
            android:layout_margin="@dimen/list_item_image_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/worker_photo"
            tools:src="@drawable/ic_male_black" />

        <TextView
            android:id="@+id/worker_name"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-16dp"
            app:layout_constraintTop_toTopOf="@id/worker_photo"
            app:layout_constraintStart_toEndOf="@+id/worker_photo"
            tools:text="Igor Brown" />

        <TextView
            android:id="@+id/worker_info"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="-20dp"
            app:layout_constraintTop_toBottomOf="@+id/worker_name"
            app:layout_constraintStart_toEndOf="@+id/worker_photo"
            tools:text="21, Miner" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>